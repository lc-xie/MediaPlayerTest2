<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stephen.mediaplaytest2.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_name_voice"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/voiceTitle"
                    android:gravity="center"
                    android:text="一个人要像一支队伍"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_author_voice"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/voiceAuthor"
                    android:gravity="center"
                    android:text="作者：刘瑜  主播：留儿"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#80F8F9C3">

                <SeekBar
                    android:id="@+id/progress_voice_play"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="48dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/tv_time_current_play"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/progress_voice_play"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/progress_voice_play"
                    android:gravity="center"
                    android:text="00:00"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_time_total_play"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/progress_voice_play"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/progress_voice_play"
                    android:gravity="center"
                    android:text="00:00"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/button_voice_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progress_voice_play"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_circle"
                    android:src="@drawable/ic_voice_play" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
